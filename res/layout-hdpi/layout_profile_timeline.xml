<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/ll_profile_timeline"
    android:background="@drawable/img_weibo_con_border"
    android:layout_margin="5dp"
    >
    
    <RelativeLayout 
        android:id="@+id/rl_profile_timeline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_weibo_con_bottom_border"
        >
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/txtTimeline"
	        android:layout_alignParentLeft="true"
	        android:textColor="@color/topbarBg"
            android:typeface ="sans"
            android:textSize="15sp"
	        />
    </RelativeLayout>
    
</LinearLayout>
