<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_weibo_con_border"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal"
     >
    
     <RelativeLayout 
        android:id="@+id/rl_name_card_brief_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv_name_card_brief_photo"
            android:layout_width="85dip"
            android:layout_height="85dip"
            android:src="@drawable/img_card_head_portrait_small"
            />
    </RelativeLayout>

     <RelativeLayout
        android:id="@+id/rl_name_card_brief_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_name_card_brief_photo"
        android:layout_centerHorizontal="true"
        >
           <TextView
               android:id="@+id/tv_name_card_brief_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/topbarBg"
               android:typeface ="sans"
               android:textSize="16sp"
               android:layout_centerHorizontal="true"
               />
    </RelativeLayout>
</RelativeLayout>
